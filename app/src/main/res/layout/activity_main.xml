<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/txt_encabezado"
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:background="#D54DC0F4"
        android:paddingStart="16dp"
        android:paddingTop="16dp"
        android:text="Encabezado"
        android:textColor="@color/white"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/txt_titulo"
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:layout_below="@id/txt_encabezado"
        android:background="#0997D8"
        android:gravity="center"
        android:text="Titulo"
        android:textColor="@color/white"
        android:textSize="40sp" />

    <ScrollView
        android:id="@+id/sc_articulo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/txt_titulo">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/txt_articulo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:autoLink="all"
                android:padding="16dp"
                android:text="@string/texto_articulo2"
                android:textSize="20sp" />
        </LinearLayout>
    </ScrollView>

</RelativeLayout>